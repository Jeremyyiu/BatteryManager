<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_cv"
    style="@style/cardTheme"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="0.7dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    app:contentPaddingBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <TextView
            style="@style/HeaderTheme"
            android:text="Network" />

        <include layout="@layout/line_divider" />

        <include
            android:id="@+id/wifiSwitch"
            layout="@layout/layout_switch"
            android:text="WiFi" />

        <include layout="@layout/line_divider" />

        <include
            android:id="@+id/mobileDataSwitch"
            layout="@layout/layout_switch"
            android:text="Mobile Data" />

        <include layout="@layout/line_divider" />

        <include
            android:id="@+id/bluetoothSwitch"
            layout="@layout/layout_switch"
            android:text="Bluetooth" />

        <include layout="@layout/line_divider" />

        <include
            android:id="@+id/airplaneModeSwitch"
            layout="@layout/layout_switch"
            android:text="Airplane" />

        <include layout="@layout/line_divider" />

        <include
            android:id="@+id/gprsSwitch"
            layout="@layout/layout_switch"
            android:text="GPRS" />

    </LinearLayout>

</android.support.v7.widget.CardView>