<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="0.7dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            app:contentPaddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="Network"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <include
                    android:id="@+id/wifi"
                    layout="@layout/layout_switch"
                    android:text="WiFi" />

                <include
                    android:id="@+id/gprs"
                    layout="@layout/layout_switch"
                    android:text="GPRS" />

                <include
                    android:id="@+id/tooth"
                    layout="@layout/layout_switch"
                    android:text="Bluetooth" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="0.7dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            app:contentPaddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="Display"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <include
                    android:id="@+id/autobrightness"
                    layout="@layout/layout_switch"
                    android:text="AutoBrightness" />

                <include
                    android:id="@+id/monochrome"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome1"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome2"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome3"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="0.7dp"
            app:cardMaxElevation="1dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="5dp"
            app:contentPaddingBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="Display lol"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

                <include
                    android:id="@+id/autobrightness1"
                    layout="@layout/layout_switch"
                    android:text="AutoBrightness" />

                <include
                    android:id="@+id/monochrome12"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome11"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome21"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

                <include
                    android:id="@+id/monochrome31"
                    layout="@layout/layout_switch"
                    android:text="Monochrome" />

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>